<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppPreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceCategoryStyle">@style/AppPreferenceCategory</item>
    </style>

    <style name="AppPreferenceCategory" parent="@style/Preference.Category.Material">
        <item name="dividerColor">@color/transparent</item>
    </style>

    <style name="MaterialButtonIcon">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">32dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="android:navigationBarColor">@color/oplusColorSurfaces</item>
        <item name="android:windowElevation">17dp</item>
        <item name="panelBackground">@drawable/panel_bg_without_shadow</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="backgroundTint">@color/oplusColorSurfaces</item>
    </style>

    <style name="TextAppearance.TopIntroText" parent="@style/OplusTextAppearanceBody">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="TextAppearance.Footer.Title.SettingsLib" parent="@android:style/TextAppearance.DeviceDefault.WindowTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>

    <style name="AppTheme.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:dialogCornerRadius">32dp</item>
        <item name="android:background">@color/oplusColorSurfaces</item>
        <item name="android:backgroundDimAmount">0.40</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Title.Text</item>
    </style>

    <style name="MaterialAlertDialog.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HorizontalDivider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="Theme.Material3.Translucent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--on below line we are setting background as transparent color-->
        <item name="android:background">@android:color/transparent</item>
        <!--on below line we are displaying the windowNotitle as true as we are not displaying our status bar-->
        <item name="android:windowNoTitle">true</item>
        <!--on below line we are setting our window background as transparent color-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--on below line we are setting color background cache hint as null-->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!--on below line we are adding a window translucent as true-->
        <item name="android:windowIsTranslucent">true</item>
        <!--on below line we are adding a window animationstyle-->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="ImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="IconRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/custom_popup_background</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Widget.MaterialButton" parent="Widget.Material3.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.06</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.MaterialButton.Red" parent="Widget.MaterialButton">
        <item name="backgroundTint">?attr/colorError</item>
        <item name="android:textColor">?attr/colorOnError</item>
    </style>

    <style name="OptionTitleTextAppearance" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineHeight">15sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Base.Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/bottomNavigationBackground</item>
        <item name="itemRippleColor">@color/transparent</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.BottomNavigationView.ActiveIndicator</item>
        <item name="itemIconTint">@color/text_color_primary</item>
        <item name="itemTextColor">@color/text_color_primary</item>
    </style>

    <style name="Widget.BottomNavigationView.ActiveIndicator" parent="">
        <item name="android:color">@color/transparent</item>
    </style>

    <!-- Ls Clock 28 -->
    <style name="ConsolasFontTextAppearance">
        <item name="fontFamily">@font/consolas</item>
        <item name="android:fontFamily">@font/consolas</item>
    </style>

    <!-- Weather -->
    <style name="WeatherBaseText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ForecastWeatherText" parent="@style/WeatherBaseText">
        <item name="android:textSize">@dimen/forecast_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ForecastWeatherTextSmall" parent="@style/WeatherBaseText">
        <item name="android:textSize">@dimen/forecast_text_size_small</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
    </style>

    <style name="DetailedWeatherText" parent="@style/WeatherBaseText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderWeatherText" parent="@style/WeatherBaseText">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CurrentWeatherText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">96sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textFontWeight">200</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CurrentWeatherTemperature" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">96sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OplusPreferenceCategoryStyle" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/preference_category_text_height</item>
        <item name="android:layout_marginTop">@dimen/preference_item_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/preference_item_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/preference_item_padding_side</item>
        <item name="android:layout_marginRight">@dimen/preference_item_padding_side</item>
        <item name="android:paddingStart">@dimen/preference_category_padding_start</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/preference_category_text</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="OplusTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="OplusTextAppearanceBody" parent="@style/OplusTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="PreferenceTitleStyle" parent="@style/OplusTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.05</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="PreferenceSummaryStyle" parent="@style/OplusTextAppearanceBody">
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="PreferenceIcon" parent="">
        <item name="android:layout_marginTop">@dimen/preference_icon_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/preference_icon_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/preference_icon_margin_right</item>
    </style>

    <style name="PreferenceContent" parent="">
        <item name="android:paddingTop">@dimen/preference_text_content_padding_top</item>
        <item name="android:paddingBottom">@dimen/preference_text_content_padding_bottom</item>
        <item name="android:layout_marginStart">@dimen/preference_text_margin_left</item>
    </style>

    <style name="PreferenceStatusText" parent="">
        <item name="android:textAppearance">@style/OplusTextAppearanceBody</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="PreferenceStatusText.Tiny" parent="@style/PreferenceStatusText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/white</item>
        <item name="trackDecorationTint">@color/transparent</item>
        <item name="trackTint">@drawable/switch_track</item>
    </style>

    <style name="Widget.CompoundButton.RadioButton" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_radio_selector</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="backgroundTint">@color/oplusColorSurfaces</item>
    </style>

    <style name="Widget.App.Snackbar.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.05</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.Material3.Slider">
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.Material3.Tooltip">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="backgroundTint">@color/oplusColorSurfaces</item>
    </style>

    <!-- Toolbar -->
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="colorOnSurface">@color/text_color_primary</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.TitleLarge</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.App.TitleMedium</item>
        <item name="navigationIconTint">@color/text_color_primary</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <!-- Preview cards -->
    <style name="PreviewCard" parent="CardView">
        <item name="cardCornerRadius">26dp</item>
        <item name="android:clipChildren">true</item>
        <item name="contentPadding">@dimen/preview_card_padding</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="FullContentPreviewCard" parent="PreviewCard">
        <item name="contentPadding">0dp</item>
    </style>



</resources>
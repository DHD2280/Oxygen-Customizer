        android:key="package_manager"
        app:fragment="it.dhd.oxygencustomizer.ui.fragments.Mods$PackageManager"
        android:title="@string/package_manager"
        search:ignore="true"/> -->

    <Preference
        android:icon="@drawable/ic_mods_misc"
        android:key="misc"
        android:title="@string/misc"
        app:fragment="it.dhd.oxygencustomizer.ui.fragments.Mods$Misc"
        search:ignore="true" />

